{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "types": [],
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@pages/*": ["app/pages/*"],
      "@layouts/*": ["app/layouts/*"],
      "@services/*": ["app/_services/*"],
      "@helpers/*": ["app/_helpers/*"],
      "@assets/*": ["app/assets/*"],
      "@env/*": ["environments/*"]
    }
  },
  "exclude": ["test.ts", "**/*.spec.ts"]
}
